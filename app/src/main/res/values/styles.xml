<resources>
    <attr name="logo_name" format="reference"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="logo_name">@drawable/purp</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@drawable/button_selector</item>
        <item name="colorButtonNormal">@drawable/button_selector</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="logo_name">@drawable/purp</item>
    </style>

    <style name="RedThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/redDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:buttonBarStyle">@style/CustomButtonRed</item>
        <item name="android:buttonBarButtonStyle">@style/CustomButtonRed</item>
        <item name="android:buttonStyle">@style/CustomButtonRed</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.AppCompat.Button.Custom</item>
        <item name="logo_name">@drawable/red</item>
    </style>

    <style name="RedThemeWithActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/redDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:buttonBarStyle">@style/CustomButtonRed</item>
        <item name="android:buttonBarButtonStyle">@style/CustomButtonRed</item>
        <item name="android:buttonStyle">@style/CustomButtonRed</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.AppCompat.Button.Custom</item>
        <item name="logo_name">@drawable/red</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name ="android:color">@color/colorPrimary</item>
        <item name ="android:background">@color/colorPrimary</item>
    </style>

    <style name="CustomButtonRed" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name ="android:color">@color/red</item>
        <item name ="android:background">@color/red</item>
    </style>

    <style name="TextAppearance.AppCompat.Button.Custom">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>

